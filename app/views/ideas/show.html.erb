<h1><%= @idea.title %></h1>

<% @idea.images.each do |image| %>
  <img src="<%= image.url %>" alt="">
<% end %>

<p><%= @idea.description %></p>
<p>Category: <%= @idea.category.name %></p>
<%= link_to "Select Image", images_path %>
<%= link_to "Edit", edit_user_idea_path(@idea.user, @idea) %>
<%= link_to "Delete", user_idea_path(@idea.user, @idea), method: :delete %>
