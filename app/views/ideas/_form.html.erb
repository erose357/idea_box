<%= form_for [@idea.user, @idea] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.collection_select(:category_id, Category.all, :id, :name, prompt: 'Select Category', required: true) %>

  <%= f.submit %>
<% end %>
